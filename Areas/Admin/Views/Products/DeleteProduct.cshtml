@model WebAppBanHangOnlineNhomNBTPQ.tbSANPHAM

@{
    ViewBag.Title = "Confirm Delete Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Confirm Delete Product</h2>
    <p>Are you sure you want to delete the following product?</p>

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.TENSANPHAM)</dt>
        <dd>@Html.DisplayFor(model => model.TENSANPHAM)</dd>
    </dl>

    @using (Html.BeginForm("DeleteProduct", "Products", new { id = Model.MASANPHAM }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="btn btn-default">Cancel</a>
    }
</div>
