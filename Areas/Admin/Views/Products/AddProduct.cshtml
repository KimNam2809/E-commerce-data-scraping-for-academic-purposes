@model WebAppBanHangOnlineNhomNBTPQ.tbSANPHAM

@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Add Product</h2>
                    </div>
                </div>
                @using (Html.BeginForm("AddProduct", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row tm-edit-product-row">
                        <div class="col-xl-6 col-lg-6 col-md-12">
                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.TENSANPHAM)
                                @Html.EditorFor(model => model.TENSANPHAM, new { @class = "form-control validate", id = "name", name = "name", type = "text" })
                                @Html.ValidationMessageFor(model => model.TENSANPHAM)
                            </div>
                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.MOTA)
                                @Html.EditorFor(model => model.MOTA, new { @class = "form-control validate", id = "description", name = "description", type = "text", row = "3" })
                                @Html.ValidationMessageFor(model => model.MOTA)
                            </div>
                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.SIZE)
                                @Html.EditorFor(model => model.SIZE, new { @class = "form-control validate", id = "size", name = "size", type = "text" })
                                @Html.ValidationMessageFor(model => model.SIZE)
                            </div>
                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.MAU)
                                @Html.EditorFor(model => model.MAU, new { @class = "form-control validate", id = "mau", name = "mau", type = "text" })
                                @Html.ValidationMessageFor(model => model.MAU)
                            </div>
                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.DONGIA)
                                @Html.EditorFor(model => model.DONGIA, new { @class = "form-control validate", id = "dongia", name = "dongia", type = "text" })
                                @Html.ValidationMessageFor(model => model.DONGIA)
                            </div>
                            <!-- Trường Chọn Danh Mục -->
                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.MADANHMUC, "Category")
                                @Html.DropDownListFor(model => model.MADANHMUC, new SelectList(ViewBag.Categories as IEnumerable<WebAppBanHangOnlineNhomNBTPQ.tbDANHMUC>, "MADANHMUC", "TENDANHMUC"), "Select category", new { @class = "form-control", id = "category" })
                                @Html.ValidationMessageFor(model => model.MADANHMUC)
                            </div>
                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.SOLUONG)
                                @Html.EditorFor(model => model.SOLUONG, new { @class = "form-control validate", id = "soluong", name = "soluong", type = "text" })
                                @Html.ValidationMessageFor(model => model.SOLUONG)
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                            <!-- Trường Tải lên Ảnh -->
                            @for (int i = 0; i < 3; i++)
                            {
                                <div class="custom-file mt-3 mb-3">
                                    <input id="fileInput@(i)" name="fileInputs" type="file" class="custom-file-input" onchange="updateFileName()" />
                                    <label class="custom-file-label" for="fileInput@(i)">Choose file...</label>
                                </div>
                            }
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block text-uppercase">Add Product Now</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function updateFileName() {
        var input = document.getElementById('fileInput0');
        var label = document.querySelector('.custom-file-label');
        if (input.files.length > 0) {
            label.innerHTML = input.files[0].name;
        } else {
            label.innerHTML = 'Choose file...';
        }
    }
</script>

